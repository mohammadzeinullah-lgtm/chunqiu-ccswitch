{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Code With",
  "version": "1.0.5",
  "identifier": "com.aicodewith.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:3007",
    "beforeDevCommand": "pnpm run dev:renderer",
    "beforeBuildCommand": "pnpm run build:renderer"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AiCodeWith",
        "titleBarStyle": "Overlay",
        "width": 1000,
        "height": 650,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "devtools": false,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https: http:",
      "assetProtocol": {
        "enable": true,
        "scope": []
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "template": "wix/per-user-main.wxs",
        "language": {
          "zh-CN": {
            "localePath": "wix/locales/zh-CN.wxl"
          }
        }
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ccswitch"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQyREYwRjM5Q0FCOEU0RTkKUldUcDVMaktPUS9mMHVsK0djWVBSN1E3MWZnYzhrclFWSXhadytacndON0VtSjZZdjBsWVhtejYK",
      "endpoints": [
        "https://github.com/Bianshumeng/aicodewith-cc-switch/releases/latest/download/latest.json"
      ]
    }
  }
}
